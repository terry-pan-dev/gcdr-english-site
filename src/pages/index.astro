---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Hero } from "../components/Hero";
import { About } from "../components/About";
import { Teachings } from "../components/Teachings";
import { Posters } from "../components/Posters";
import { Visit } from "../components/Visit";
---

<BaseLayout
  title="Gold Coast Dharma Realm"
  description="Gold Coast Dharma Realm (GCDR) is the Australian branch of the Dharma Realm Buddhist Association founded by Venerable Master Hsuan Hua. Visit us for Buddhist teachings, meditation, and spiritual practice."
  theme="light"
>
  <Hero client:load />
  <About client:visible />
  <Teachings client:visible />
  <Posters client:only="react" />
  <Visit client:idle />
</BaseLayout>
