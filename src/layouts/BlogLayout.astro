---
import '../styles/globals.css';
import { Navigation } from '../components/Navigation';
import { Footer } from '../components/Footer';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const formattedDate = new Date(post.data.date).toLocaleDateString('en-US', {
  month: 'long',
  day: 'numeric',
  year: 'numeric',
});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{post.data.title} - Gold Coast Dharma Realm</title>
    <meta name="description" content={post.data.excerpt} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Crimson+Pro:ital,wght@0,400;0,500;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="min-h-screen" style="background-color: #EBE9CF;">
      <Navigation client:load />

      <!-- Hero Section -->
      <div class="relative pt-24 pb-16" style="background-color: #1c1917;">
        <!-- Background Image with Overlay or Decorative Pattern -->
        <div class="absolute inset-0">
          {post.data.image ? (
            <>
              <img
                src={post.data.image}
                alt={post.data.title}
                class="w-full h-full object-cover opacity-30"
              />
              <div class="absolute inset-0 bg-gradient-to-b from-black/60 to-[#1c1917]"></div>
            </>
          ) : (
            <>
              <!-- Decorative pattern when no image -->
              <div
                class="absolute inset-0 opacity-10"
                style="background-image: radial-gradient(circle, #c9a050 1px, transparent 1px); background-size: 30px 30px;"
              ></div>
              <!-- Dharma wheel decoration -->
              <div class="absolute inset-0 flex items-center justify-center overflow-hidden">
                <svg
                  class="w-96 h-96 opacity-5"
                  viewBox="0 0 100 100"
                  fill="none"
                  style="color: #c9a050;"
                >
                  <circle cx="50" cy="50" r="45" stroke="currentColor" stroke-width="1" fill="none" />
                  <circle cx="50" cy="50" r="35" stroke="currentColor" stroke-width="1" fill="none" />
                  <circle cx="50" cy="50" r="12" stroke="currentColor" stroke-width="1" fill="none" />
                  <line x1="50" y1="5" x2="50" y2="95" stroke="currentColor" stroke-width="1" />
                  <line x1="5" y1="50" x2="95" y2="50" stroke="currentColor" stroke-width="1" />
                  <line x1="18" y1="18" x2="82" y2="82" stroke="currentColor" stroke-width="1" />
                  <line x1="82" y1="18" x2="18" y2="82" stroke="currentColor" stroke-width="1" />
                </svg>
              </div>
              <div class="absolute inset-0 bg-gradient-to-b from-transparent to-[#1c1917]"></div>
            </>
          )}
        </div>

        <div class="max-w-3xl lg:max-w-5xl xl:max-w-6xl 2xl:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative pt-16">
          <!-- Category Badge -->
          <div class="mb-4">
            <span
              class="inline-block px-4 py-1 text-sm uppercase tracking-wider rounded"
              style="background-color: #c9a050; color: #1c1917;"
            >
              {post.data.category}
            </span>
          </div>

          <!-- Title -->
          <h1
            class="text-4xl md:text-5xl lg:text-6xl mb-6 leading-tight"
            style="color: #EBE9CF; font-family: 'Cormorant Garamond', Georgia, serif;"
          >
            {post.data.title}
          </h1>

          <!-- Meta -->
          <div
            class="flex items-center gap-4 text-sm"
            style="color: rgba(235, 233, 207, 0.7);"
          >
            <span>{formattedDate}</span>
            <span>&bull;</span>
            <span>{post.data.author}</span>
          </div>
        </div>
      </div>

      <!-- Article Content -->
      <article class="py-8">
        <div class="max-w-3xl lg:max-w-5xl xl:max-w-6xl 2xl:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div
            class="prose prose-lg prose-stone max-w-none"
            style="font-family: 'Crimson Pro', Georgia, serif;"
          >
            <slot />
          </div>

          <!-- Back to Blog Link -->
          <div class="mt-8 pt-8 border-t" style="border-color: #c9a050;">
            <a
              href="/blog"
              class="inline-flex items-center gap-2 transition-colors hover:gap-3"
              style="color: #c9a050;"
            >
              <span>&larr;</span>
              Back to Dharma Insights
            </a>
          </div>
        </div>
      </article>

      <Footer />
    </div>
  </body>
</html>

<style is:global>
  /* Custom prose styles for blog content */
  .prose h2 {
    font-family: 'Cormorant Garamond', Georgia, serif;
    color: #1c1917;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.75rem;
    font-weight: 500;
    border-bottom: 2px solid #c9a050;
    padding-bottom: 0.5rem;
  }

  .prose h3 {
    font-family: 'Cormorant Garamond', Georgia, serif;
    color: #1c1917;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
    font-weight: 500;
  }

  .prose p {
    color: #44403c;
    line-height: 1.8;
    margin-bottom: 0;
  }

  .prose strong {
    color: #1c1917;
    font-weight: 600;
  }

  .prose ul,
  .prose ol {
    margin-top: 1rem;
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose li {
    color: #44403c;
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .prose a {
    color: #c9a050;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: #b8944a;
  }

  .prose table {
    width: 100%;
    margin: 1.5rem 0;
    border-collapse: collapse;
  }

  .prose th,
  .prose td {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid #d6d3d1;
  }

  .prose th {
    background-color: rgba(201, 160, 80, 0.1);
    font-weight: 600;
    color: #1c1917;
  }

  .prose img {
    border-radius: 0.5rem;
    overflow: hidden;
  }
</style>
