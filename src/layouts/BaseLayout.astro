---
import '../styles/globals.css';
import { Navigation } from '../components/Navigation';
import { Footer } from '../components/Footer';
import { getGoogleFontsUrl } from '../config/fonts';

interface Props {
  title?: string;
  theme?: 'light' | 'dark';
}

const { title = 'Gold Coast Dharma Realm', theme = 'light' } = Astro.props;
const bgClass = theme === 'dark' ? 'min-h-screen bg-[#1c1917]' : 'min-h-screen bg-stone-50';
const googleFontsUrl = getGoogleFontsUrl();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href={googleFontsUrl}
      rel="stylesheet"
    />
  </head>
  <body>
    <div class={bgClass} style="overflow: visible;">
      <Navigation client:load />
      <slot />
      <Footer />
    </div>
  </body>
</html>
