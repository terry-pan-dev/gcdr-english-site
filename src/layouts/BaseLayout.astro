---
import '../styles/globals.css';
import { Navigation } from '../components/Navigation';
import { Footer } from '../components/Footer';

interface Props {
  title?: string;
  theme?: 'light' | 'dark';
}

const { title = 'Gold Coast Dharma Realm', theme = 'light' } = Astro.props;
const bgClass = theme === 'dark' ? 'min-h-screen bg-[#1c1917]' : 'min-h-screen bg-stone-50';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <div class={bgClass}>
      <Navigation client:load />
      <slot />
      <Footer />
    </div>
  </body>
</html>
